<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="6dip">

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dip"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/rowTraining_Points"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/rowTraining_Mood"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:src="@drawable/ic_mood_verysatisfied"
            app:tint="@color/colorAccent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dip"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rowTraining_Training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/rowTraining_Info"
            android:layout_width="match_parent"
            android:layout_height="26dip"
            android:textSize="13sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/rowTraining_Delete"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_delete" />

</LinearLayout>